<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="currentWeather"
            type="com.veit.app.weatherino.api.current_weather.CurrentWeather" />
        <variable
            name="loading"
            type="Boolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            visibleOrGone="@{loading}"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/secondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            visibleOrInvisible="@{!loading}"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <com.veit.app.weatherino.ui.views.WeatherIconView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    iconCode="@{currentWeather.weather.get(0).icon}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{currentWeather.weather.get(0).description}"
                    android:textSize="@dimen/largeText"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">



            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>